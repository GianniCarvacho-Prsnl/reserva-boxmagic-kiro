{
  "version": 2,
  "functions": {
    "api/reserve.ts": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "@vercel/node@18"
    }
  },
  "crons": [
    {
      "path": "/api/reserve?scheduleId=crossfit-lunes-18",
      "schedule": "0 23 * * 0"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "regions": ["gru1"],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/reserve?status=true"
    },
    {
      "source": "/status",
      "destination": "/api/reserve?status=true"
    },
    {
      "source": "/validate",
      "destination": "/api/reserve?validate=true"
    }
  ]
}