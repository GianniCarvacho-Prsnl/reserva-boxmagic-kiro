{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/reserve?scheduleId=crossfit-lunes-18",
      "schedule": "0 23 * * 0"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "regions": ["gru1"],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/reserve?status=true"
    },
    {
      "source": "/status",
      "destination": "/api/reserve?status=true"
    },
    {
      "source": "/validate",
      "destination": "/api/reserve?validate=true"
    }
  ]
}