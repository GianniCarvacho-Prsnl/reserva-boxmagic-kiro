{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CrossFit Reservation Bot Configuration",
  "type": "object",
  "properties": {
    "schedules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the schedule"
          },
          "dayToSelect": {
            "type": "string",
            "enum": ["today", "tomorrow"],
            "description": "Which day to select for reservation"
          },
          "className": {
            "type": "string",
            "description": "Exact name of the class as it appears on the website"
          },
          "reservationHour": {
            "type": "string",
            "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Hour to execute the reservation (HH:MM format)"
          },
          "reservationDay": {
            "type": "string",
            "enum": ["sunday", "monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "any"],
            "description": "Day of the week to execute the reservation"
          },
          "bufferSeconds": {
            "type": "number",
            "minimum": 10,
            "maximum": 300,
            "description": "Buffer time in seconds for preparation"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether this schedule is active"
          },
          "cronExpression": {
            "type": "string",
            "description": "Cron expression for scheduling"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the schedule"
          }
        },
        "required": ["id", "dayToSelect", "className", "reservationHour", "reservationDay", "enabled"],
        "additionalProperties": false
      }
    }
  },
  "required": ["schedules"],
  "additionalProperties": false
}